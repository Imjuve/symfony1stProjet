{% extends 'base.html.twig' %}

{% block title %}Admin des articles |
	{{ parent() }}
{% endblock %}

{% block body %}
	<section class="container mt-4">
		<h1 class="text-center">Administration des articles</h1>
		<a href="{{ path('admin_article_create')}}" class="btn btn-secondary">Créer un article</a>
		<div class="row g-2 mt-4">
			{% for article in articles %}
				<div class="col-md-4">
					<div class="card">
						<h2 class="card-header">{{ article.titre }}</h2>
						<div class="card-body">
							<p class="card-text">{{ article.contenu }}</p>
							<div class="d-flex justify-content-between">
								<a href="{{path('admin_article_update',{'id': article.id})}}" class="btn btn-warning">Modifier</a>
								<form action="{{path('admin_article_delete',{'id':article.id})}}" method="POST" onsubmit="return confirm('Etes vous sûr de vouloir supprimer cet article?')">
										<input type="hidden" name="id" value="{{article.id}}">
										<input type="hidden" name="token" value="{{csrf_token('delete'~ article.id) }}">
										<button type="submit" class="btn btn-danger">Supprimer</button>
								</form>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</section>
{% endblock %}
